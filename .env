##########################
# Database Configuration #
##########################
# Set to 'true' to use sample DuckDB database for development/testing
# Set to 'false' to use production database
USE_SAMPLE_DB=true

# Production Database Settings (used when USE_SAMPLE_DB=false)
# Supported types: duckdb, oracle, mariadb, mysql
# DB_TYPE=mariadb
# DB_HOST=localhost
# DB_PORT=3306
# DB_NAME=your_database_name
# DB_USER=your_username
# DB_PASSWORD=your_password

# Oracle-specific settings (when DB_TYPE=oracle)
# DB_PORT=1521
# DB_SERVICE_NAME=your_service_name

# MariaDB/MySQL-specific settings (when DB_TYPE=mariadb or mysql)
# DB_CHARSET=utf8mb4

####################
# Batch Processing #
####################
LLM_BATCH_SIZE=8
MAX_CONCURRENT_LLM_REQUESTS=8

#########
# MODEL #
#########
# OPENAI_API_KEY=sk-proj-....
# OPENAI_BASE_URL=
# OPENAI_MODEL=gpt-4.1-nano

LOCAL_API_KEY=ollama
LOCAL_BASE_URL=http://127.0.0.1:11434/v1
LOCAL_MODEL=gpt-oss:120b # gpt-oss:120b, gpt-oss:20b, llama3
    
API_KEY=${LOCAL_API_KEY}
BASE_URL=${LOCAL_BASE_URL}
LLM_MODEL=${LOCAL_MODEL}

HEURISTICS_ENABLED=true
##########################
# Legal Source Weighting #
##########################
LEGAL_SOURCE_PRIORITY_WEIGHT=0.7
EXPERT_FEEDBACK_WEIGHT=1.0
INTERNAL_POLICY_WEIGHT=0.8
NATIONAL_LAW_WEIGHT=0.6
INTERNATIONAL_REGULATIONS_WEIGHT=0.4


#############
# Embedding #
#############
CHUNK_SIZE = 128
CHUNK_OVERLAP = 30
TOP_K_RESULTS = 3
MAX_CONTEXT_TOKENS = 30000
FEEDBACK_MAX_LENGTH = 200

EMBEDDING_OPENAI_API_KEY=${API_KEY}
# Provider: "openai" or "local"
EMBEDDING_PROVIDER=local

# Legal Document RAG Embedding Model (for retrieving legal documents)
# 법률 문서 RAG 임베딩 모델 (법률 문서 검색용)
# Models: "text-embedding-3-small", "nlpaueb/legal-bert-base-uncased", "woong0322/ko-legal-sbert-finetuned"
LEGAL_EMBEDDING_MODEL=nlpaueb/legal-bert-base-uncased

# PII Classification Similarity Search Embedding Model (for learning from expert feedback)
# PII 분류 유사도 검색 임베딩 모델 (전문가 피드백 학습용)
# General-purpose models are better for database column description matching
# 범용 모델이 데이터베이스 컬럼 설명 매칭에 더 적합합니다
# Models: "sentence-transformers/all-MiniLM-L6-v2" (recommended), "sentence-transformers/paraphrase-multilingual-MiniLM-L12-v2"
FEEDBACK_EMBEDDING_MODEL=sentence-transformers/all-MiniLM-L6-v2

###############
# Prompt Mode #
###############
# Options: "full" for large models or "lite" for small models
PROMPT_MODE=full

###############
# Default LLM #
###############
ENABLE_STREAMING=false
STREAMING_LOG_CHUNKS=false

DEFAULT_LLM_OPENAI_API_KEY=${API_KEY}
DEFAULT_LLM_OPENAI_BASE_URL=${BASE_URL}
DEFAULT_LLM=${LLM_MODEL}

##################################
# LLM for Stage 1(PII Detection) #
##################################
STAGE_1_LLM_OPENAI_API_KEY=${API_KEY}
STAGE_1_OPENAI_BASE_URL=${BASE_URL}
STAGE_1_LLM=${LOCAL_MODEL}

#####################################
# LLM for Stage 2(Policy Synthesis) #
#####################################
STAGE_2_LLM_OPENAI_API_KEY=${API_KEY}
STAGE_2_OPENAI_BASE_URL=${BASE_URL}
STAGE_2_LLM=${LOCAL_MODEL}